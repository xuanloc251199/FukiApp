<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ce3f1b" />
            <stroke
                android:width="1dp"
                android:color="#ce0f0f" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <size
                android:width="327dp"
                android:height="46dp"/>
            <gradient
                android:startColor="#9D1B34"
                android:endColor="#D12027"
                android:angle="270" />
            <corners
                android:radius="@dimen/dp_20" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>